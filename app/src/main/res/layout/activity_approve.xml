<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".screen.ApproveActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_approve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation_approve"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_approve"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:backgroundTint="#FFFFFF"
        app:menu="@menu/menu_navigation_approve"
        app:itemTextColor="@color/color_navigation"
        app:itemIconTint="@color/color_navigation"
        app:labelVisibilityMode="labeled"
        />
</RelativeLayout>